{% extends 'base.html.twig' %}

{% block title %}Trick
{% endblock %}

{% block body %}
	<h1>Figure</h1>

	<table class="table">
		<tbody>
			<div style="position: relative;">
				<img src="{{ asset('uploads/images/' ~ trick.tricksImages.first().getImagePath()) }}" class="card-img-top" alt="{{ trick.name }}">
				<div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
					<tr>
						<th>Id</th>
						<td>{{ trick.id }}</td>
					</tr>
					<tr>
						<th>Name</th>
						<td>{{ trick.name }}</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('app_trick_index') }}">back to list</a>

			<a href="{{ path('app_trick_edit', {'slug': trick.slug}) }}">edit</a>

			{{ include('trick/_delete_form.html.twig') }}

			{% for comment in comments %}
				<div class="comment">
					<p>{{ comment.content }}</p>
					<small>by
					{#	{{ comment.user.username }} #}
						on
						{{ comment.dateCreated|date('d/m/Y H:i') }}</small>
				</div>
			{% endfor %}

		</tbody>
	{% endblock %}
