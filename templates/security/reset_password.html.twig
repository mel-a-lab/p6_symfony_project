{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="mb-0">Réinitialisation du mot de passe</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <label for="inputUsername">Nom d'utilisateur</label>
                                <input type="text" name="username" id="inputUsername" class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label for="inputPassword">Nouveau mot de passe</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" required>
                            </div>
                            
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('reset_password') }}">
                            
                            <button type="submit" class="btn btn-primary btn-block">Changer le mot de passe</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
